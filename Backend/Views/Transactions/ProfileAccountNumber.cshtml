@model OnlineBanking.DAL.BankAccounts
@{
    ViewBag.Title = "ProfileAccountNumber";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    <link href="~/Content/vendor/datatables/css/jquery.dataTables.min.css" rel="stylesheet"/>
}
@section customCss {
    <link rel="stylesheet" href="~/Content/vendor/bootstrap-daterangepicker/daterangepicker.css">
    <style>
        .dt-buttons {
            float: right;
        }
        .dataTables_wrapper .dataTables_filter {
            float: left;
        }
    </style>
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Profile Account Number</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="breadcrumb-item active">Profile Account Number</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-3">
                <div class="card card-success">
                    <div class="card-header">
                        <h3 class="card-title">Account Profile</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-horizontal">
                            <div class="form-group">
                                <strong>Bank Account Number: </strong> @Model.Name
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Total Account Number</h3>
                        <div class="example">
                            <p class="mb-1">Date Range Pick</p>
                            <div id="daterange" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; width: 100%">
                                <i class="fa fa-calendar"></i>&nbsp;
                                <span></span> <i class="fa fa-caret-down"></i>
                            </div>
                            @* <button class="dt-button buttons-excel buttons-html5" tabindex="0" aria-controls="example" type="button"><span>Excel</span></button> *@
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-horizontal">
                            <table class="table table-hover" id="datatables">
                                <thead>
                                <tr>
                                    <th>No</th>
                                    <th>CreatedAt</th>
                                    <th>Messages</th>
                                    <th>Amount </th>
                                    <th>Banlanced </th>
                                    <th>Status </th>
                                </tr>
                                </thead>
                                <tbody id="tbl_trans"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts{
        <script src="~/Content/js/dataTables.buttons.min.js"></script>
        <script src="~/Content/js/pdfmake.min.js"></script> 
        <script src="~/Content/js/jszip.min.js"></script> 
        <script src="~/Content/js/buttons.html5.min.js"></script>
        <script src="~/Content/vendor/moment/moment.min.js" type="text/javascript"></script>
        <script src="~/Content/vendor/bootstrap-daterangepicker/daterangepicker.js"></script>
        <script src="~/Content/js/plugins-init/bs-daterange-picker-init.js"></script>
    <script src="~/Content/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script>
        $(function () {
            let buttonCommon = {
                    exportOptions: {
                        format: {
                            body: function ( data, row, column, node ) {
                                // Strip $ from salary column to make it numeric
                                return column === 5 ?
                                    data.replace( /[$,]/g, '' ) :
                                    data;
                            }
                        }
                    }};
            let startDate;
            let endDate;
            let datatables = $('#datatables').DataTable({
                "paging": true,
                "ordering": true,
                "autoWidth": false,
                "responsive": true,
                "processing": true,
                "filter": true,
                "lengthMenu": [5, 10, 20, 50, 100, 200, 500],
                "ajax": {
                    url: "/Transactions/GetData",
                   data: function(d){
                       d.fromId= @Model.BankAccountId;
                       d.startDate= startDate;
                       d.endDate= endDate;
                   },
                    
                },
                "order": [
                    [1, 'desc']
                ],
                "columns": [
                    {
                        data: 'TransactionDetailId',
                        className: 'align-middle text-center'
                    },
                    {
                        data: 'CreatedAt',
                        className: 'align-middle',
                    },
                    {
                        data: 'Messages',
                        className: 'align-middle',
                    },
                    {
                        data: { Amount: 'Amount', FromId: 'FromId', Currency: "Currency", Type: "Type"},
                        render: function(data) {
                            let fromId = $("#fromId").val();
                            return (data.Amount) == null ? "" : (data.Type ? " - " : " + ") + new Intl.NumberFormat('vi-VN', { style: 'currency', currency: data.Currency }).format(data.Amount)
                        },
                        className: 'align-middle',
                    },
                    {
                        data: { FromId: 'FromId', BalancedFrom: "BalancedFrom", BalancedTo:"BalancedTo"},
                        render: function (data) {
                            let fromId = $("#fromId").val();
                            return ((data.FromId === @Model.BankAccountId) ? new Intl.NumberFormat("vi-VN", { style: "currency", currency: "VND" }).format(data.BalancedFrom) : new Intl.NumberFormat("vi-VN", { style: "currency", currency: "VND" }).format(data.BalancedTo))
                        },
                        className: 'align-middle',
                        "searchable": false,
                        "orderable": false
                    },
                    {
                        data: 'StatusName',
                        className: 'align-middle text-center',
                        "searchable": false,
                        "orderable": false
                    },
                    {
                        data: {TransactionId:'TransactionId'},
                        "render": function (data) {
                            let detail = "@Url.Action("TransactionsDetails", "Transactions")/" + data.TransactionDetailId;
                            return '<a href="'+detail+'" class="btn btn-rounded btn-info" >Details</a>'}
                    },
                ],
                 dom: 'Bfrtip',
                 buttons: [
                     { extend: 'excel', className: 'btn btn-primary glyphicon glyphicon-list-alt' },
                     { extend: 'pdf', className: 'btn btn-primary glyphicon glyphicon-list-alt' },
                 ]
            })
            $('#daterange').on('apply.daterangepicker', function(ev, picker) {
                            startDate = picker.startDate.format('YYYY-MM-DD');
                            endDate = picker.endDate.format('YYYY-MM-DD');
                          datatables.ajax.reload();
                        });
                        
                        let start = moment().subtract(29, 'days');
                        let end = moment();
                        
                        function cb(start, end) {
                            $('#daterange span').html(start.format('DD/MM/YYYY') + ' - ' + end.format('DD/MM/YYYY'));
                        }
                    
                        $('#daterange').daterangepicker({
                            startDate: start,
                            endDate: end,
                            ranges: {
                               'Today': [moment(), moment()],
                               'Yesterday': [moment().subtract(1, 'days'), moment().subtract(1, 'days')],
                               'Last 7 Days': [moment().subtract(6, 'days'), moment()],
                               'Last 30 Days': [moment().subtract(29, 'days'), moment()],
                               'This Month': [moment().startOf('month'), moment().endOf('month')],
                               'Last Month': [moment().subtract(1, 'month').startOf('month'), moment().subtract(1, 'month').endOf('month')],
                               'This Year': [moment().subtract(1, 'month').startOf('year'), moment().subtract(1, 'month').endOf('year')]
                            }
                        }, cb);
                    
                        cb(start, end);
        })
    </script>
}


<!-- /.content -->