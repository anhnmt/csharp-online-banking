<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>AdminLTE 3 | Top Navigation + Sidebar</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/Content/plugins/fontawesome/css/all.min.css">
    <!-- Theme style -->
    <link href="~/Content/plugins/toastr/toastr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/dist/css/adminlte.min.css">
    <link rel="stylesheet" href="~/Content/style.css">

    @RenderSection("css", required: false)
    <style>
        .chat-popup {
            position: fixed !important;
            bottom: 0;
            right: 0;
            margin-right: 10px;
        }

        .direct-chat {
            width: 450px;
        }

        .direct-chat-messages {
            height: 550px;
        }

        .card-title {
            margin: 0 10px 0 0;
        }

        .card-header::after {
            display: block;
            clear: both;
            content: unset;
        }

        .chat-icon {
            background: #4284f3;
            border-radius: 50%;
            padding: 20px;
            margin: 15px;
        }

            .chat-icon i {
                font-size: 35px;
                color: #fff;
            }
    </style>
</head>
<body class="hold-transition sidebar-collapse layout-top-nav">
    <!-- Preloader -->
    <div class="preloader flex-column justify-content-center align-items-center">
        <img class="animation__shake" src="~/Content/dist/img/AdminLTELogo.png" alt="AdminLTELogo" height="60" width="60">
    </div>
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand-md navbar-light navbar-white">
            <div class="container">
                <a href="" class="navbar-brand">
                    <img src="~/Content/dist/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
