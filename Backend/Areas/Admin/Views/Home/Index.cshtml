
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Quản lý tài khoản</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">Quản lý tài khoản</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="col-md-4">
            <div class="card card-success">
                <div class="card-header">
                    <h3 class="card-title">Account Number</h3>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tr>
                            <th>Name</th>
                            <th>CurrencyId</th>
                            <th>Balance</th>
                            <th>Status </th>
                            <th></th>
                        </tr>

                        <tbody id="tbl_user"></tbody>

                    </table>
                </div>
                <!-- /.card-body -->
            </div>
        </div>
        <!-- Default box -->
        <!-- /.card -->

    </section>
    <!-- /.content -->
</div>
@section scripts{
    <script>
        var managerAcc = {
            load: function () {
                $.ajax({
                    type: "GET",
                    url: "/Admin/User/GetData",
                    success: function (res) {
                        let _html = "";
                        for (let item of res.data) {
                            _html += `<tr>
                                            <td>${item.Name}</td>
                                            <td>${item.CurrencyId}</td>
                                            <td>${item.Balance}</td>
                                            <td>${item.Status}</td>
                                            <td><button data-id="${item.Id}" class='btn btn-warning btn-edit'>Sửa</button> | <button  class='btn btn-danger'>Xóa</button></td>
                                          </tr>`
                        }
                        $('#tbl_user').html(_html);
                        var pages = '';

                        $(".pagination").html(pages);
                    }
                });
            }
        }
        $(function () {
            managerAcc.load();
        })
    </script>
}

